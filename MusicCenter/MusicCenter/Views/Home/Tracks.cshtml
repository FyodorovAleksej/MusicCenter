@using IF.Lastfm.Core.Objects
@model List<LastTrack>
@{
    ViewBag.Title = "Tracks";
}
@if (Model != null && Model.Count != 0)
{    
    <div class="row" style="margin-top:5px; margin-left:12%">
        @foreach (var item in Model)
        {
            <div class="col-md-5" style="min-height:80px">
                <div class="media">
                    <article class="audio">
                        <header>
                            <div class="media-left">
                                <a href="#" OnClick="clickTrack('@item.Url.AbsoluteUri')">
                                    @if (item.Images.Large != null)
                                    {
                                        <img src="@item.Images.Medium" id="runMusic" />
                                    }
                                    else
                                    {
                                        <img src="https://icon-icons.com/icons2/936/PNG/512/play-sign_icon-icons.com_73455.png" height="50" width="50">
                                    }
                                </a>
                            </div>
                            <div class="media-body">
                                <h4 class="media-heading">@item.ArtistName - @item.Name </h4>
                                <h5>PlayCount: @item.PlayCount</h5>
                            </div>
                        </header>
                    </article>
                </div>
            </div>
        }
</div>
}
else
{
    <h1  id="message"> No tracks at site...</h1>
}